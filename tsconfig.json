{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["src/*"],
      "@/pages/*": ["pages/*"],
      "@/components/*": ["components/*"],
      "@/utils/*": ["utils/*"],
      "@/config/*": ["config/*"],
      "@/styles/*": ["styles/*"],
      "@/redux/*": ["redux/*"],
      "@/hooks/*": ["hooks/*"],
      "@/types/*": ["types/*"],
      "@/libs/*": ["libs/*"],
      "@/context/*": ["redux/services/context/*"],
      "@/assets/*": ["assets/*"],
      "@/views/*": ["views/*"]
    }
  },
  "include": ["src", "**/*.ts", "**/*.tsx*"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
